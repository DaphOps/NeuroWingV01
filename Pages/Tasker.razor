@page "/Tasker"

<div class="TaskerContent shadow p-5 rounded">
    <div class="TaskerTitle">
        <h1 class="pb-4">Tasker</h1>
    </div>
    <hr/>
    <div class="TaskerBody">
        <div class="TaskPoints">
            <p>
                Tasker points: @TaskerPoints
            </p>
        </div>
        <div class="row">
            <div class="col-2">
                <p>Icon</p>
            </div>
            <div class="col-10">
                <p>Create task</p>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Task</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Task 1</td>
                <td>01/01/2021</td>
                <td>High</td>
                <td>
                    <button class="btn btn-primary">Edit</button>
                    <button class="btn btn-danger">Delete</button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

@code {
    private int TaskerPoints = 120;
}